    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "Launch Server using nodemon",
            "program": "${workspaceFolder}/Server/bin/www",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server using node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/Server/bin/www"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost (run ng serve first)",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/AngularApp",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///*": "*",
                "webpack:///./~/*": "${webRoot}/node_modules/*",
                "meteor://ðŸ’»app/*": "${webRoot}/*"
            }
        }
    ]
}